<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Products"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="27sp"
        android:textStyle="bold"/>

<LinearLayout
    android:id="@+id/linear1_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_below="@+id/slogan_category"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="45dp">
    
    <ImageView
        android:id="@+id/tshirts"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/tshirts"
        />

    <ImageView
        android:id="@+id/dresses"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/dresses"
        />
    <ImageView
        android:id="@+id/coats"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/coats"
        />
    <ImageView
        android:id="@+id/sports"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/sports"
        />

</LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/watch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/watch"
            />

        <ImageView
            android:id="@+id/bag"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/bag"
            />
        <ImageView
            android:id="@+id/shoe"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/shoe"
            />
        <ImageView
            android:id="@+id/hat"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/hat"
            />

    </LinearLayout>


</RelativeLayout>